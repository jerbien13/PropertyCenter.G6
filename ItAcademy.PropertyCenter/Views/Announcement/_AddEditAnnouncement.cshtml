            @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AgencyId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.AgencyId, (SelectList)ViewBag.Agencies, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AgencyId, "", new { @class = "text-danger" })
        </div>
    </div>
